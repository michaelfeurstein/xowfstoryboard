::xowiki::Form new \
    -set name en:storyboard.form \
    -title "Storyboard Form" \
    -set anon_instances t \
    -set form {<form>
		<div class="top-wrapper">
			<div class="sb-instruction">@instruction@</div>
			<div class="sb-helpers">@helpers@</div>
		</div>
		<div class="main-wrapper">
			<div class="sb-editor">@editor@</div>
			<div class="sb-preview">@htmlPreview@</div>
		</div>
		</form>} \
    -set text {
		@instruction@
		@helpers@
		@editor@
		@htmlPreview@} \
    -set form_constraints {
		_name:hidden
		_page_order:hidden
		_nls_language:hidden
		_description:hidden
		_creator:hidden
		_title:hidden
   }
